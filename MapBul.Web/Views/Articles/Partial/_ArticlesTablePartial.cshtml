@using MapBul.DBContext
@model List<article>

<div class="col-xs-12">
    <div class="ibox">
        <div class="ibox-title">
            <h3>Статьи</h3>
        </div>
        <div class="ibox-content">
            <div class="panel-body">
                <input type="button" class="btn btn-primary" data-actionurl="@Url.Action("_NewArticleModalPartial", "Articles")" value="Новая статья" id="NewArticleButton"/>
            </div>
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover dataTable" id="ArticlesTable">
                    <thead>
                        <tr>
                            <th>№</th>
                            <th>Название</th>
                            <th>Описание</th>
                            <th>Категория</th>
                            <th>Текст</th>
                            <th>Статус</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var article in Model)
                        {
                            <tr data-articleid="@article.Id">
                                <td class="EditArticleLink">
                                    @article.Id
                                </td>
                                <td class="EditArticleLink">
                                    @article.Title
                                </td>
                                <td class="EditArticleLink">
                                    @article.Description
                                </td>

                                <td class="EditArticleLink">
                                    @article.category.Name
                                </td>
                                <td class="EditArticleLink">
                                    @article.Text
                                </td>
                                <td>
                                    @{
                            var tmp = article;
                                    }
                                    @Html.DropDownList("ArticleSatusSelect", ((List<status>)ViewBag.Statuses).Select(s => new SelectListItem { Text = s.Description, Value = s.Id.ToString(), Selected = s.Id == tmp.StatusId }), new Dictionary<string, object> { { "class", "ArticleSatusSelect form-control chosenselect" }, { "data-articleid", article.Id } })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>

