@using MapBul.SharedClasses.Constants
@using MapBul.Web.Helpers
@model MapBul.Web.Models.JournalistsListModel



<div class="ibox">
    <div class="ibox-title">
        <h3>Журналисты</h3>
    </div>
    <div class="ibox-content">
        <div class="panel-body">
            <!--if (Html.IsUserInRoles(UserTypes.Admin))-->
            <!--{-->
                <input type="button" class="btn btn-primary" data-actionurl="@Url.Action("_NewJournalistPartial", "Users")" value="Новый журналист" id="NewJornalistButton"/>
            <!--}-->
        </div>
        <div class="table-responsive" id="JournalistsTable">
            <table class="table table-striped table-bordered table-hover dataTable">
                <thead>
                <tr>
                    <th>№</th>
                    <th>Дата регистрации</th>
                    <th>Email</th>
                    <th>Имя</th>
                    <th>Отчество</th>
                    <th>Фамилия</th>
                    <th>Дата рождения</th>
                    <th>Пол</th>
                    <th>Телефон</th>
                    <th>Адрес</th>
                    <th>Редактор</th>
                    <th>Статус</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var journalist in Model.Journalists)
                {
                    <tr class="JournalistDescriptionRow" data-id="@journalist.Id" style="cursor: pointer; background-color: rgba(@(journalist.user.Deleted ? "255,0,0,0.1" : "0,255,0,0.1"))">
                        <td>
                            @journalist.Id
                        </td>
                        <td>
                            @journalist.user.RegistrationDate
                        </td>
                        <td>
                            @journalist.user.Email
                        </td>
                        <td>
                            @journalist.FirstName
                        </td>
                        <td>
                            @journalist.LastName
                        </td>
                        <td>
                            @journalist.MiddleName
                        </td>
                        <td>
                            @journalist.BirthDate.ToString("dd.MM.yyyy")
                        </td>
                        <td>
                            @journalist.Gender
                        </td>
                        <td>
                            @journalist.Phone
                        </td>
                        <td>
                            @journalist.Address
                        </td>
                        <td>
                            @(journalist.editor != null ? journalist.editor.FirstName + " " + journalist.editor.LastName + " " + journalist.editor.MiddleName : "Не привязан")
                        </td>
                        <td>
                            @(journalist.user.Deleted ? "Заблокирован" : "Активен")
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>