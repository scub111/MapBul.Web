@using MapBul.Web.Resource
@model MapBul.Web.Models.NewAdminModel
<div class="ibox">
    <div class="ibox-title">
        <h3>Новый администратор</h3>
    </div>
    <div class="ibox-content">
        @using (Ajax.BeginForm("AddNewAdmin", "Users", new AjaxOptions {HttpMethod = "POST", OnSuccess = "AddNewAdminSuccess", OnFailure = "ViewNotification('Не удалось добавить администратора','error')", AllowCache = false}))
        {
            <div class="row">
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Email, new Dictionary<string, object> {{"class", "form-control"}, {"placeholder", "Email"}, {"required", ""}})
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="@Resource.DicAdd"/>
                </div>
            </div>
        }
    </div>
</div>



<script type="text/javascript">
    var a = $('.checkbox');
    a.each(function () {
        Switchery(this, { color: '#1AB394' });
    });
</script>