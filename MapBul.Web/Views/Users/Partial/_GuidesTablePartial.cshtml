@using MapBul.Web.Resource
@model MapBul.Web.Models.GuidesListModel

<div class="ibox">
    <div class="ibox-title">
        <h3>Гиды</h3>
    </div>
    <div class="ibox-content">
        <div class="panel-body">
            <input type="button" class="btn btn-primary" data-actionurl="@Url.Action("_NewGuideModalPartial", "Users")" value="Новый гид" id="NewGuideButton" />
        </div>
        <div class="table-responsive" id="GuidesTable">
            <table class="table table-striped table-bordered table-hover dataTable">
                <thead>
                <tr>
                    <th>№</th>
                    <th>Дата регистрации</th>
                    <th>Email</th>
                    <th>Имя</th>
                    <th>Отчество</th>
                    <th>Фамилия</th>
                    <th>Дата рождения</th>
                    <th>Пол</th>
                    <th>Телефон</th>
                    <th>@Resource.Address</th>
                    <th>Редактор</th>
                    <th>@Resource.Status</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var guide in Model.Guides)
                {
                    <tr class="GuideDescriptionRow" data-id="@guide.Id" style="cursor: pointer; background-color: rgba(@(guide.user.Deleted ? "255,0,0,0.1" : "0,255,0,0.1"))">
                        <td>
                            @guide.Id
                        </td>
                        <td>
                            @guide.user.RegistrationDate
                        </td>
                        <td>
                            @guide.user.Email
                        </td>
                        <td>
                            @guide.FirstName
                        </td>
                        <td>
                            @guide.LastName
                        </td>
                        <td>
                            @guide.MiddleName
                        </td>
                        <td>
                            @guide.BirthDate.ToString("dd.MM.yyyy")
                        </td>
                        <td>
                            @guide.Gender
                        </td>
                        <td>
                            @guide.Phone
                        </td>
                        <td>
                            @guide.Address
                        </td>
                        <td>
                            @(guide.editor != null ? guide.editor.FirstName + " " + guide.editor.LastName + " " + guide.editor.MiddleName : "Не привязан")
                        </td>
                        <td>
                            @(guide.user.Deleted ? "Заблокирован" : "Активен")
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>