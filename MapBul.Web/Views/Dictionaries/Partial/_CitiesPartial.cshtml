@using MapBul.Web.Resource
@model MapBul.Web.Models.CitiesModel
<div class="col-md-6">
    <div class="ibox">
        <div class="ibox-title">
            <h3>@Resource.DicCountries</h3>
        </div>
        <div class="ibox-content">
            <table class="table table-responsive CitiesTable">
                <thead>
                <tr>
                    <th>Страна</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                @foreach (var country in Model.Countries.Where(c=>c.Country.Id!=0))
                {
                    <tr>
                        <td>@country.CountryName</td>
                        <td>
                            <input data-id="@country.Country.Id" type="button" class="DeleteCountryButton btn btn-danger" value=@Resource.Delete />
                        </td>
                    </tr>

                }
                </tbody>
            </table>
            <div class="row">
                <div class="col-md-6 form-group">
                    <input class="form-control" id="NewCountryInput" type="text" placeholder="@Resource.DicNewCountry" />
                </div>
                <div class="col-md-10 form-group">
                    <input type="button" class="btn-primary btn" data-actionurl="@Url.Action("AddCountry")" value="@Resource.DicAdd" id="NewCountryButton" />
                </div>
            </div>
        </div>
    </div>
</div>
<div class="col-md-6">
    <div class="ibox">
        <div class="ibox-title">

            <h3>@Resource.DicCities</h3>
        </div>
        <div class="ibox-content">
            <table class="table table-responsive CitiesTable">
                <thead>
                <tr>
                    <th>@Resource.City</th>
                    <!--<th>Регион</th>-->
                    <th>Страна</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                @foreach (var city in Model.Cities.Where(c => c.City.Id != 0))
                {
                    <tr>
                        <td>@city.CityName</td>
                        <!--<td>city.region.Name</td>-->
                        <td>@city.CountryName</td>
                        <td>
                            <input data-id="@city.City.Id" type="button" class="DeleteCityButton btn btn-danger" value=@Resource.Delete />
                        </td>
                    </tr>
                }
                </tbody>
            </table>
            <div class="row">
                <div class="form-group col-md-6">
                    <select class="form-control" id="CountrySelectForCity">
                        @foreach (var country in Model.Countries.Where(c => c.Country.Id != 0))
                        {
                            <option data-countryname="@country.CountryName" data-countrycode="@country.Country.Code" data-placeid="@country.Country.PlaceId" value="@country.Country.Id">@country.CountryName</option>
                        }
                    </select>
                </div>
                <div class="col-md-6 form-group">
                    <input class="form-control" id="NewCityInput" placeholder="@Resource.DicNewCity" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 form-group">
                    <input type="button" class="btn-primary btn" data-actionurl="@Url.Action("AddCity")" value="@Resource.DicAdd" id="NewCityButton"/>
                </div>
            </div>
        </div>
    </div>
</div>