@using MapBul.DBContext
@model category
<div class="ibox">
    <div class="ibox-title">
        <h3>Редактировать категорию</h3>
    </div>
    <div class="ibox-content">
        <form action="/" method="POST" id="EditCategoryForm" enctype="multipart/form-data">
            @Html.HiddenFor(m=>m.Id)
            @Html.HiddenFor(m=>m.ForArticle)
            <div class="form-group">
                <label class="control-label">Имя категории</label>
                @Html.TextBoxFor(m => m.Name, new Dictionary<string, object> {{"placeholder", "Название"}, {"required", ""}, {"class", "form-control"}})
            </div>
            <div class="form-group">
                <label class="control-label">Родительская категория</label>
                @Html.DropDownListFor(m => m.ParentId, ((List<category>) ViewBag.Categories).Select(c => new SelectListItem {Selected = Model.ParentId==c.Id,Value = c.Id.ToString(), Text = c.Name}).Concat(new List<SelectListItem> {new SelectListItem {Selected = Model.ParentId==null,Text = "Нет", Value = "null"}}), new Dictionary<string, object> {{"data-placeholder", "Выберите категорию"}, {"class", "form-control chosenselect"}})
            </div>
            <div class="form-group">
                <label class="control-label">Иконка категории</label>
                <input id="EditCategoryIconInput" name="categoryIcon" type="file" accept="image/jpeg, image/png" class="fileinput"/>
            </div>
            <div class="form-group">
                <label class="control-label">Пин категории</label>
                <input id="EditCategoryPinInput" name="categoryPin" type="file" accept="image/jpeg, image/png" class="fileinput" />
            </div>
            <div class="form-group">
                <label class="control-label">Цвет</label>
                @Html.TextBoxFor(m => m.Color, new Dictionary<string, object> { { "placeholder", "Цвет" }, { "required", "" }, { "class", "form-control colorInputCategoryEdit" } })
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-xs-6">
                        <input id="EditCategoryFormSubmit" type="button" class="btn btn-primary" value="Сохранить"/>
                    </div>
                    <div class="col-xs-6">
                        <input id="DeleteCategoryButton" type="button" class="btn btn-danger" value="Удалить" />
                    </div>

                </div>
            </div>

        </form>
    </div>
</div>

