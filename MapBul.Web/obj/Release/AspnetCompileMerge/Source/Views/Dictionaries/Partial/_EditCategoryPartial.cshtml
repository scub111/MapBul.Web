@model MapBul.Web.Models.CategoriesModel
@{ string articleOrMarker = Model.ForArticle ? "Article" : "Marker";}

<div class="ibox">
    <div class="ibox-title">
        <h3>Редактировать категорию</h3>
    </div>
    <div class="ibox-content">
        <div class="form-group">
            @Html.DropDownList("EditCategorySelect", (Model.Categories).Select(c => new SelectListItem { Value = c.Id.ToString(), Text = c.Name }), new Dictionary<string, object> { { "id", "Edit"+articleOrMarker+"CategorySelect" }, { "data-placeholder", "Выберите категорию" }, { "class", "form-control chosenselect" } })
        </div>
        <div class="form-group">
            <input id="Edit@(articleOrMarker)CategoryButton" type="button" class="btn btn-primary" value="Редактировать" />
        </div>
    </div>
</div>
