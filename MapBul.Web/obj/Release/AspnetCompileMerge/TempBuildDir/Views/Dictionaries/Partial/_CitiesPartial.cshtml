@model MapBul.Web.Models.CitiesModel
<div class="col-md-4">
    <div class="ibox">
        <div class="ibox-title">
            <h3>Страны</h3>
        </div>
        <div class="ibox-content">
            <table class="table table-responsive CitiesTable">
                <thead>
                <tr>
                    <th>Страна</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var country in Model.Countries)
                {
                    <tr>
                        <td>@country.Name</td>
                    </tr>
                }
                </tbody>
            </table>
            <div class="row">
                <div class="col-md-6 form-group">
                    <input class="form-control" id="NewCountryInput" placeholder="Новая страна" />
                </div>
                <div class="col-md-10 form-group">
                    <input type="button" class="btn-primary btn" data-actionurl="@Url.Action("AddCountry")" value="Добавить" id="NewCountryButton" />
                </div>
            </div>
        </div>
    </div>
</div>
<div class="col-md-4">
    <div class="ibox">
        <div class="ibox-title">
            <h3>Регионы</h3>
        </div>
        <div class="ibox-content">
            <table class="table table-responsive CitiesTable">
                <thead>
                <tr>
                    <th>Регион</th>
                    <th>Страна</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var region in Model.Regions)
                {
                    <tr>
                        <td>@region.Name</td>
                        <td>@region.country.Name</td>
                    </tr>
                }
                </tbody>
            </table>
            <div class="row">
                <div class="col-md-6 form-group">
                    @Html.DropDownList("CountrySelectForRegion", Model.Countries.Select(c => new SelectListItem { Value = c.Id.ToString(), Text = c.Name }), new Dictionary<string, object> { { "class", "form-control chosenselect" }, { "id", "CountrySelectForRegion" } })
                </div>
                <div class="col-md-6 form-group">
                    <input class="form-control" id="NewRegionInput" placeholder="Новый регион" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 form-group">
                    <input type="button" class="btn-primary btn" data-actionurl="@Url.Action("AddRegion")" value="Добавить" id="NewRegionButton" />
                </div>
            </div>
        </div>
    </div>
</div>
<div class="col-md-4">
    <div class="ibox">
        <div class="ibox-title">
            
            <h3>Города</h3>
        </div>
        <div class="ibox-content">
            <table class="table table-responsive CitiesTable">
                <thead>
                <tr>
                    <th>Город</th>
                    <th>Регион</th>
                    <th>Страна</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var city in Model.Cities)
                {
                    <tr>
                        <td>@city.Name</td>
                        <td>@city.region.Name</td>
                        <td>@city.region.country.Name</td>
                    </tr>
                }
                </tbody>
            </table>
            <div class="row">
                <div class="form-group col-md-6">
                    @Html.DropDownList("RegionSelectForCity", Model.Regions.Select(c => new SelectListItem {Value = c.Id.ToString(), Text = c.Name}), new Dictionary<string, object> {{"class", "form-control chosenselect"}, {"id", "RegionSelectForCity"}})
                </div>
                <div class="col-md-6 form-group">
                    <input class="form-control" id="NewCityInput" placeholder="Новый город"/>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 form-group">
                    <input type="button" class="btn-primary btn" data-actionurl="@Url.Action("AddCity")" value="Добавить" id="NewCityButton" />
                </div>
            </div>
        </div>
    </div>
</div>