@using MapBul.XIsland.Helpers
@model MapBul.DBContext.article




<div class='wrapper'>
    <div class='picure_container'>
        <div class='picture'>
            <img src="@Html.MapImage(Model.Photo)" alt="">
            <div class='event_info'>
                <div class='date_line'>Дата события: <strong>@(Model.StartDate != null ? Model.StartDate.Value.ToString("dd.MM.yyyy") : "Не указано")@(Model.EndDate != null ? " - " + Model.EndDate.Value.ToString("dd.MM.yyyy") : "")</strong></div>
                <div class='location_line'>Место события: <strong>@((Model.city!=null&&Model.city.country!=null)?Model.city.country.Name+", "+Model.city.Name:"Не указано")</strong></div>
            </div>
        </div>
    </div>
    <div class='content'>
        <div class="post_date">@(Model.PublishedDate != null ? Model.PublishedDate.Value.ToString("dd.MM.yyyy") : "Не указано")</div>
        <br class='clear'>
        <div class="subj_line">@Model.Title</div>
        <div class="tags_line">
            @foreach (var tag in Model.articlesubcategory)
            {
                <a href="#">#@tag.category.Name</a>
            }
        </div>

        <p class="text">@Model.Text</p>
    </div>
</div>
